<style>
section {
/*   background: linear-gradient(180deg, #FFFFFF 0%, #E7D7D7 100%); */
  padding: 40px 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: auto;
  box-sizing: border-box;
  margin-top: 35px;
  margin-bottom: 35px;
}
.fade-in-section {
  opacity: 0;
  transform: translateY(100px); 
  transition: opacity 1.5s ease-out, transform 1.5s ease-out;
  will-change: opacity, transform;
}

.fade-in-section.visible {
  opacity: 1;
  transform: translateY(0); 
}
.content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  max-width: 1200px;
  gap: 30px;

}

.text-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.decorative-image {
  width: 75px;
  height: auto;
  margin-bottom: -10px;
}

h1 {
  font-size: clamp(2rem, 5vw, 3rem);
  color: #350112;
  font-weight: bold;
  position: relative;
}

h1::after {
  content: '';
  display: block;
  position: absolute;
  bottom: -7px;
  left: 0;
  width: 100%;
  height: 7px;
  background-color: #E7D7D7;
}

h2 {
  font-size: 32px;
  color: #5D5F70;
  font-style: italic;
  border-left: 4px solid #350112;
  padding-left: 10px;
}

p {
  font-size: 21px;
  color: #5D5F70;
  line-height: 1.6;
}



.separator {
  width: 2px;
  background: #350112;
  height: 80%;
}

.video-container {
  flex: 1;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;

}

iframe {
  width: 100%;
  max-width: 100%;
  height: 450px; /* Incrementamos el height */
  border: 3px solid #5F331D;
  border-radius: 10px;
}

/* Responsividad */
@media (max-width: 768px) {
  .content {
    flex-direction: column;
    gap: 20px;
  }

  .separator {
    display: none;
  }

  iframe {
    max-width: 100vw;
    height: 300px;
  }
  .text-group {
    text-align: center;
  }
  /* img center */
  .decorative-image {
    margin: 0 auto;
  }
}
</style>













<script>
  document.addEventListener("DOMContentLoaded", () => {
    const sections = document.querySelectorAll(".fade-in-section");

    const observer = new IntersectionObserver(
      (entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
            observer.unobserve(entry.target); // Deja de observar después de activarse
          }
        });
      },
      { threshold: 0.3 } // El efecto se activará cuando el 20% del elemento sea visible
    );

    sections.forEach(section => observer.observe(section));
  });
</script>